source 'https://rubygems.org'

# Padrino Stable Gem
gem 'padrino', '0.12.5'

# Server requirements
gem 'thin'

# Optional JSON codec (faster performance)
gem 'oj'

# Project requirements
gem 'rake'

# Component requirements
gem 'therubyracer'
gem 'rack-less'
gem 'less'
gem 'slim'
gem 'mongoid', '~> 4.0.2'

gem 'smarter_csv'

# Test requirements
group :test do
  gem 'minitest', :require => 'minitest/autorun'
  gem 'rack-test', :require => 'rack/test'
end

group :development do
  gem 'pry-padrino'
end
